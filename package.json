{
  "name": "@aura/aura-glass",
  "version": "1.0.0",
  "description": "A comprehensive glassmorphism design system for React applications with 142+ production-ready components",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:visual": "percy exec -- jest --testPathPattern=visual",
    "test:a11y": "jest --testPathPattern=a11y",
    "test:performance": "jest --testPathPattern=performance",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepublishOnly": "npm run build",
    "size-check": "bundlesize",
    "analyze": "npm run build && npx bundle-analyzer dist/index.esm.js"
  },
  "keywords": [
    "react",
    "glassmorphism",
    "design-system",
    "ui-components",
    "typescript",
    "accessibility",
    "performance",
    "animation",
    "glass-effects",
    "modern-ui"
  ],
  "author": "AuraOne Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/auraone/aura-glass.git"
  },
  "bugs": {
    "url": "https://github.com/auraone/aura-glass/issues"
  },
  "homepage": "https://aura-glass.auraone.com",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.7.0",
    "@percy/cli": "^1.27.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-storysource": "8.6.14",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.3.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bundlesize": "^0.18.0",
    "eslint": "^8.45.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "lighthouse": "^10.4.0",
    "rollup": "^3.28.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "8.6.14",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.0"
  },
  "bundlesize": [
    {
      "path": "./dist/index.esm.js",
      "maxSize": "150 kB",
      "compression": "gzip"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom",
      "<rootDir>/src/utils/testSetup.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.tsx",
      "!src/utils/testingUtils.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "sideEffects": [
    "*.css",
    "src/styles/**/*"
  ]
}